{
  "name": "yaml-creative-remix-desk",
  "version": "1.0.0",
  "description": "YAML Creative Remix Desk - Interactive YAML showcase with smart placement",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/__tests__/**/*.test.js", "**/*.test.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!test/**"
    ]
  }
}